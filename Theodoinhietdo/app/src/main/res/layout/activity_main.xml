<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="buixexamplecom.theodoinhietdo2.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">


    <RelativeLayout

        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="2dp"
        android:layout_marginTop="0dp"
        android:background="#3F51B5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:background="#3F51B5"
            android:elevation="5dp"
            android:layout_marginRight="2dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:clickable="false">
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/imageViewNen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="5dp"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:text="ASE Lab"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginRight="65dp"
            android:background="#3F51B5"
            android:layout_toLeftOf="@+id/my_toolbar"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/anhlab"
            android:layout_alignParentStart="true"
            android:elevation="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Phần mềm theo dõi nhiệt độ"
            android:id="@+id/textView_tenphanmem"
            android:layout_marginRight="65dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/imageViewNen"
            android:layout_toRightOf="@+id/imageView2"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:elevation="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        android:weightSum="1"

        android:layout_above="@+id/RelativeLayout4"
        android:layout_below="@+id/linearLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:elevation="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nhiệt độ lớn nhất"
            android:id="@+id/textView"
            android:textSize="24dp"
            android:textColor="#0D47A1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:layout_alignRight="@+id/Edit_NhietDoMax"
            android:layout_alignEnd="@+id/Edit_NhietDoMax"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:gravity="center_vertical"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Edit_NhietDoMax"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="1dp"
            android:text="___"
            android:textColor="#D50000"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView_CanhBao"
            android:layout_above="@+id/textView3"
            android:layout_toRightOf="@+id/imageView_CanhBao"
            android:layout_alignTop="@+id/imageView_CanhBao"
            android:layout_marginLeft="30dp" />


        <ImageView
            android:id="@+id/imageView_CanhBao"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="2dp"
            android:src="@drawable/icongray"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Trạng thái"
            android:id="@+id/textView2"
            android:elevation="2dp"
            android:textSize="24dp"
            android:textColor="#0D47A1"
            android:layout_alignTop="@+id/textView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/textView_ThoiGianCapNhat"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0D47A1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:elevation="2dp"
            android:text="Cập nhật lúc : "
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0D47A1"
            android:layout_above="@+id/textView_ThoiGianCapNhat"
            android:layout_alignRight="@+id/Edit_NhietDoMax"
            android:layout_alignEnd="@+id/Edit_NhietDoMax"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:id="@+id/imageView"
            android:layout_above="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/RelativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="1dp"
        android:background="#80DEEA"
        android:src="@drawable/anhvien"

        android:contextClickable="true"
        android:layout_above="@+id/RelativeLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/textView_sensor1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:src="@drawable/icon_sensor"
                android:background="@drawable/duongviengoctron"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:allowUndo="true"
                android:typeface="sans"
                android:autoText="true"
                android:theme="@style/RtlOverlay.Widget.AppCompat.DialogTitle.Icon"
                android:textStyle="normal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/EditText_Sensor1"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:elevation="2dp"
                android:layout_height="wrap_content"
                android:imeOptions="actionGo"
                android:inputType="numberDecimal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp"
                android:text="Nodata"
                android:textColor="#FFFF0000"
                android:layout_below="@+id/textView_sensor1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:gravity="center" />
            <ImageView
                android:id="@+id/imageView_sensor1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="2dp"
                android:src="@drawable/icongray"
                android:layout_below="@+id/EditText_Sensor1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/textViewTrangthai_sen1"
                android:editable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Trạng thái"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/duongvienxanhtron"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignStart="@+id/relativeLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/textView_sensor2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"

                android:src="@drawable/icon_sensor"
                android:background="@drawable/duongviengoctron"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/Edit_text_Sensor2"
                android:textAlignment="center"
                android:layout_width="80dp"
                android:elevation="2dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp"
                android:text="Nodata"
                android:textColor="#FFFF0000"
                android:layout_below="@+id/textView_sensor2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center" />
            <ImageView
                android:id="@+id/imageView_sensor2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="2dp"
                android:src="@drawable/icongray"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/Edit_text_Sensor2"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView3_trangthaisen2"
                android:editable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Trạng thái"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:background="@drawable/duongvienxanhtron"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/textView_sensor3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:src="@drawable/icon_sensor"
                android:background="@drawable/duongviengoctron"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textColor="@color/abc_search_url_text_pressed"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/EditText_Sensor3"
                android:textAlignment="center"
                android:elevation="2dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp"
                android:text="Nodata"
                android:textColor="#FFFF0000"
                android:layout_below="@+id/textView_sensor3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center" />
            <ImageView
                android:id="@+id/imageView_sensor3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="2dp"
                android:src="@drawable/icongray"
                android:layout_below="@+id/EditText_Sensor3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/textView_trangthaisen3"
                android:editable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Trạng thái"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:background="@drawable/duongvienxanhtron"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/linearLayout3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/textView_sensor4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:src="@drawable/icon_sensor"
                android:background="@drawable/duongviengoctron"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/abc_search_url_text_pressed"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/EditText_Sensor4"
                android:textAlignment="center"
                android:elevation="2dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20dp"
                android:text="Nodata"
                android:textColor="#FFFF0000"
                android:layout_below="@+id/textView_sensor4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center" />

            <ImageView
                android:id="@+id/imageView_sensor4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="2dp"
                android:src="@drawable/icongray"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/EditText_Sensor4"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/textView_trangthaisen4"
                android:editable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="Trạng thái"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF"
                android:background="@drawable/duongvienxanhtron"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="1dp"
        android:background="#1E88E5"
        android:clickable="false"
        android:orientation="vertical"
        android:backgroundTint="#1E88E5"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageButton
            android:id="@+id/imageButton_Sound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="4dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/iconsound2"
            android:layout_marginEnd="40dp"
            android:scaleType="fitXY"
            android:background="@drawable/duongvienxanhtron"
            android:layout_alignBottom="@+id/Button_Connect"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#1E88E5" />

        <ImageView
            android:id="@+id/Button_Connect"

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/disconnect_database"
            />
        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:format24Hour="dd/MM/yyyy  HH:mm:ss"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textViewTime"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:elevation="2dp"

            android:radius="5dp"
            android:src="@drawable/columnchart"
            android:id="@+id/button_to_bieu_do"
            android:textColor="#FFFFFF"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/imageButton_Sound"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/imageButton_Sound"
            android:background="@drawable/duongvienxanhtron"
            android:backgroundTint="#1E88E5" />


    </RelativeLayout>

</RelativeLayout>